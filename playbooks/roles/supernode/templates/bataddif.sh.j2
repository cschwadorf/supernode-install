#!/bin/bash
INTERFACE="$3"
MAC="$8"
brctl=/sbin/brctl

[ -e /opt/freifunk/tunneldigger-blacklist.txt] ? BLOCKLISTE=$(/bin/cat /opt/freifunk/tunneldigger-blacklist.txt) : BLOCKLISTE="00:00:00:00:00:00"

for i in $BLOCKLISTE;
do
    if [[ $i == $MAC ]]; then
      exit 1
    fi
done

/bin/ip link set dev $INTERFACE up mtu 1312

$brctl addif br_nodes $INTERFACE
